<?xml version="1.0"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">tsintsadze_minerva_faq_listing.tsintsadze_minerva_faq_listing_data_source</item>
        </item>
        <!-- adding button and styles: styles is last item we added class from already existed css -->
        <item name="buttons" xsi:type="array">
            <item name="add" xsi:type="array">
                <item name="name" xsi:type="string">add</item>
                <item name="label" xsi:type="string" translate="true">Add New FAQ</item>
                <item name="url" xsi:type="string">minerva/faq/new</item>
                <item name="class" xsi:type="string">primary</item>
            </item>
        </item>
    </argument>
    <settings>
        <deps>
            <dep>tsintsadze_minerva_faq_listing.tsintsadze_minerva_faq_listing_data_source</dep>
        </deps>
        <spinner>tsintsadze_minerva_faq_columns</spinner>
    </settings>
    <dataSource name="tsintsadze_minerva_faq_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <updateUrl path="mui/index/render"/>
            <!-- fixed that when the filter is reset only last record was showing multiplied -->
            <storageConfig>
                <param name="indexField" xsi:type="string">id</param>
            </storageConfig>
        </settings>
        <aclResource>Tsintsadze_Minerva::faq</aclResource>
        <dataProvider name="tsintsadze_minerva_faq_listing_data_source" class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <!-- pagination -->
    <listingToolbar name="listing_top">
        <!-- make toolbar sticky -->
        <settings>
            <sticky>true</sticky>
        </settings>
        <paging name="listing_paging"/>
        <!-- column controlling -->
        <columnsControls name="columns_controls"/>
        <bookmark name="bookmarks"/>
        <filters name="listing_filters">
            <!-- default filter  when we add this we need to delete ui_bookmarks-->
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="applied" xsi:type="array">
                        <item name="is_published" xsi:type="string">1</item>
                    </item>
                </item>
            </argument>
        </filters>
        <!-- text search after this need to add index in db schema-->
        <filterSearch name="fulltext"/>
        <massaction name="listing_massaction" component="Magento_Ui/js/grid/tree-massactions">
            <settings>
                <selectProvider>tsintsadze_minerva_faq_listing.tsintsadze_minerva_faq_listing.tsintsadze_minerva_faq_columns.ids</selectProvider>
                <indexField>id</indexField>
            </settings>
            <action name="delete">
                <settings>
                    <type>delete</type>
                    <label translate="true">Delete</label>
                    <url path="*/*/massDelete"/>
                    <confirm>
                        <title translate="true">Delete items</title>
                        <message translate="true">Are you sure you want to delete this items?</message>
                    </confirm>
                </settings>
            </action>
        </massaction>
    </listingToolbar>
    <columns name="tsintsadze_minerva_faq_columns">
        <settings>
            <childDefaults>
                <param name="fieldAction" xsi:type="array">
                    <item name="provider" xsi:type="string">tsintsadze_minerva_faq_listing.tsintsadze_minerva_faq_listing.tsintsadze_minerva_faq_columns_editor</item>
                    <item name="target" xsi:type="string">startEdit</item>
                    <item name="params" xsi:type="array">
                        <item name="0" xsi:type="string">${ $.$data.rowIndex }</item>
                        <item name="1" xsi:type="boolean">true</item>
                    </item>
                </param>
            </childDefaults>
            <editorConfig>
                <param name="clientConfig" xsi:type="array">
                    <item name="saveUrl" xsi:type="url" path="*/*/inlineEdit"/>
                    <item name="validateBeforeSave" xsi:type="boolean">false</item>
                </param>
                <param name="selectProvider" xsi:type="string">tsintsadze_minerva_faq_listing.tsintsadze_minerva_faq_listing.tsintsadze_minerva_faq_columns.ids</param>
                <param name="indexField" xsi:type="string">id</param>
                <param name="enabled" xsi:type="boolean">true</param>

            </editorConfig>
        </settings>
        <selectionsColumn name="ids">
            <settings>
                <indexField>id</indexField>
            </settings>
        </selectionsColumn>
        <column name="id">
            <settings>
                <label translate="true">ID</label>
                <filter>textRange</filter>
            </settings>
        </column>
        <column name="question">
            <settings>
                <label translate="true">Question</label>
                <filter>text</filter>
                <editor>
                    <editorType>text</editorType>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                </editor>
            </settings>
        </column>
        <column name="answer">
            <settings>
                <label translate="true">Answer</label>
                <filter>text</filter>
                <editor>
                    <editorType>text</editorType>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                </editor>
            </settings>
        </column>
        <column name="is_published" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <label translate="true">Is Published</label>
                <options class="Magento\Config\Model\Config\Source\Yesno"/>
                <dataType>select</dataType>
                <sorting>desc</sorting>
                <filter>select</filter>
                <editor>
                    <editorType>select</editorType>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                </editor>
            </settings>
        </column>
        <column name="created_at" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <label translate="true">Created at</label>
                <filter>dateRange</filter>
            </settings>
        </column>
        <column name="updated_at" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <label translate="true">Updated at</label>
                <filter>dateRange</filter>
            </settings>
        </column>
        <actionsColumn name="actions" class="Tsintsadze\Minerva\Ui\Component\Listing\Column\Actions"/>
    </columns>
</listing>
